@model PreviewsViewModel

<div class="row item-list">
    <nav class="col-sm-12">
        <ul class="pagination">
            <li class="@(Model.Items.IsFirstPage ? "disabled" : "")">
                <a href="@(Model.Items.PageNumber - 1)" aria-label="Previous">
                    <span aria-hidden="true">Previous</span>
                </a>
            </li>
            <li class="@(Model.Items.IsLastPage ? "disabled" : "")">
                <a href="/?page=@(Model.Items.PageNumber + 1)" aria-label="Next">
                    <span aria-hidden="true">Next</span>
                </a>
            </li>
        </ul>
    </nav>    


    @foreach (var item in Model.Items)
    {
        @{ 
            var copy = Model.Copy[item.StockNumber];
        }
    <div class="col-sm-3 item">
        <img class="img-responsive" src="~/img/item/hi-res/@(item.StockNumber).jpg" />
        <p>@copy.Title</p>
        <p>@item.Publisher</p>
        <p>@copy.Preview</p>
        <p>@copy.Description</p>
    </div>
    }
        
    <nav class="col-sm-12">
        <ul class="pagination">            
            <li class="@(Model.IsFirstPage ? "disabled" : "")">
                <a href="@(Model.PageNumber - 1)" aria-label="Previous">
                    <span aria-hidden="true">Previous</span>
                </a>
            </li>            
            <li class="@(Model.IsLastPage ? "disabled" : "")">
                <a href="/?page=@(Model.PageNumber + 1)" aria-label="Next">
                    <span aria-hidden="true">Next</span>
                </a>
            </li>
        </ul>
    </nav>    
</div>