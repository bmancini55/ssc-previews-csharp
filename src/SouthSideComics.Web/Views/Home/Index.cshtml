@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"
@using SouthSideComics.Web.Models
@model HomeListModel

<div class="row top-spacing search-form">
    <form role="form" class="col-md-6" method="get" asp-anti-forgery="false">
        <div class="form-group">
            <label asp-for="Publisher">Publisher</label>
            <select asp-for="Publisher" asp-items="Model.PublisherList" class="form-control">
                <option value=""></option>
            </select>            
        </div>
        <div class="form-group">
            <label asp-for="Writer">Writer</label>
            <select asp-for="Writer" asp-items="Model.WritersList" class="form-control">
                <option value=""></option>
            </select>
        </div>
        <div class="form-group">            
            <label asp-for="Artist">Artist</label>
            <select asp-for="Artist" asp-items="Model.ArtistsList" class="form-control">
                <option value=""></option>
            </select>
        </div>
        <div>
            <input type="submit" value="Search" />
        </div>
    </form>
</div>

<div class="row item-list"> 
    @foreach (var item in Model.Items)
    {                        
    <div class="col-sm-3 item">
        <div class="img-container">
            <img class="img-responsive" src="~/img/item/hi-res/201505/@(item.StockNumber).jpg" />
        </div>
        <div class="contents">
            <p>@item.Title</p>
            <p>@(item.Publisher?.Name)</p>
            <p>@item.Description</p>            
        </div>
    </div>
    }         
</div>

<div class="row">
    <nav class="col-sm-12">
        <ul class="pagination">
            <li class="@(Model.Items.IsFirstPage ? "disabled" : "")">
                <a href="/?page=@(Model.Items.PageNumber - 1)" aria-label="Previous">
                    <span aria-hidden="true">Previous</span>
                </a>
            </li>
            <li class="@(Model.Items.IsLastPage ? "disabled" : "")">
                <a href="/?page=@(Model.Items.PageNumber + 1)" aria-label="Next">
                    <span aria-hidden="true">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>